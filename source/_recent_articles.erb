<section class="recent-articles sub-element">
  <h4>Recent Articles</h4>
    <ol class="smaller-text">
    <% blog.articles[0...10].each do |article| %>
            <li><%= link_to article.title, article %>
            <span><%= article.date.strftime('%b %e') %></span></li>
    <% end %>
    </ol>
</section>

